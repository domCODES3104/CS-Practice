/*
The player needs to guess a random number generated by the computer. 
If the player guesses right, they will win a certain amount of money.
The winning prize depends on the difficulty of the game.
*/

/*
1. create user class
2. loop till number matches correct number
3. give money to user (depending on how fast they answer)
4. ask if they would like to play again
*/

#include <iostream>
#include <iomanip>
#include <cstdlib>
using namespace std;

//prototypes
double guessNum();

//creating user class
class User {
    public:
        int balance;
};

//main function
int main() {
    User user;
    user.balance = 0;
    guessNum();
    user.balance += guessNum();
    cout << "Your balance is: $" << user.balance << endl;
    return 0;
}

//guess number function
double guessNum() 
{
    srand(time(0)); //initializes rand() function
    int counter, guess, answer, thou;
    thou = 1000;
    double total;
    answer = rand() % 200 + 1;
    cout << "Enter a number: ";
    cin >> guess;
    counter++;
    
    //if guess = the number
    if (guess == answer) 
    {
        cout << "First try, wow! You have been given $10,000." << endl;
        total = 10000;
    }
    //while guess does not equal the answer
    while (guess != answer)
    {
        if(guess < answer) 
        {
            cout << "Too low!" << endl;
            counter++;
            cout << "Enter a number: ";
            cin >> guess;
        } 
        else if(guess > answer) 
        {
            cout << "Too high!" << endl;
            counter++;
            cout << "Enter a number: ";
            cin >> guess;
        }
    }
    if (guess == answer) 
    {
        cout << "Correct! You have been given $" << total << endl;
    }
    return total;
}

